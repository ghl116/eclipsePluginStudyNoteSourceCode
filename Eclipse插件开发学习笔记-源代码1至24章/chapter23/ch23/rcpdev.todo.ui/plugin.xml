<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="rcpdev.todo.todoCategory"
            name="To-Dos"/>
      <view
            allowMultiple="false"
            category="rcpdev.todo.todoCategory"
            class="rcpdev.todo.ui.calendar.CalendarView"
            icon="icons/calendar_view.GIF"
            id="rcpdev.todo.ui.CalendarView"
            name="Calendar"/>
      <view
            allowMultiple="false"
            category="rcpdev.todo.todoCategory"
            class="rcpdev.todo.ui.todolist.views.TodoListView"
            icon="icons/todo_view.gif"
            id="rcpdev.todo.ui.TodoListView"
            name="To-Do List"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="rcpdev.todo.ui.todolist.editors.TodoItemEditor"
            icon="icons/todo_editor.gif"
            id="rcpdev.todo.ui.todolist.editors.TodoItemEditor"
            name="Edit TodoItem"/>
   </extension>

</plugin>
